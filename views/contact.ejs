<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/style.css">
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
    <!-- Add this in the head section, after other script tags -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<body class="bg-gradient-to-br from-slate-900 via-blue-900/90 to-slate-900">
    <%- include('partials/navbar') %>

    <!-- Hero Section -->
    <section class="relative py-20">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center" data-aos="fade-down">
                <h1 class="text-5xl font-bold mb-4">
                    <span class="bg-gradient-to-r from-blue-400 via-cyan-400 to-blue-400 bg-clip-text text-transparent">
                        Contact Us
                    </span>
                </h1>
                <p class="text-lg text-white/70 max-w-2xl mx-auto">Get in touch with our team for personalized solutions</p>
            </div>
        </div>
    </section>

    <!-- Contact Section -->
    <section class="relative py-16">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="grid lg:grid-cols-2 gap-12">
                <!-- Contact Form -->
                <div class="relative group" data-aos="fade-right">
                    <div class="absolute inset-0 bg-gradient-to-r from-blue-500 to-cyan-500 rounded-2xl blur-lg opacity-30"></div>
                    <div class="relative bg-white/5 backdrop-blur-xl border border-white/10 p-8 rounded-2xl">
                        <form class="space-y-6" action="/submit-contact" method="POST">
                            <div>
                                <label class="block text-white/70 mb-2">Name</label>
                                <input type="text" name="name" required class="w-full px-4 py-3 rounded-lg bg-white/5 border border-white/10 text-white focus:outline-none focus:border-cyan-500 transition-colors" placeholder="Your name">
                            </div>
                            <div>
                                <label class="block text-white/70 mb-2">Email</label>
                                <input type="email" name="email" required class="w-full px-4 py-3 rounded-lg bg-white/5 border border-white/10 text-white focus:outline-none focus:border-cyan-500 transition-colors" placeholder="your@email.com">
                            </div>
                            <div>
                                <label class="block text-white/70 mb-2">Subject</label>
                                <input type="text" name="subject" required class="w-full px-4 py-3 rounded-lg bg-white/5 border border-white/10 text-white focus:outline-none focus:border-cyan-500 transition-colors" placeholder="How can we help?">
                            </div>
                            <div>
                                <label class="block text-white/70 mb-2">Message</label>
                                <textarea name="message" required rows="4" class="w-full px-4 py-3 rounded-lg bg-white/5 border border-white/10 text-white focus:outline-none focus:border-cyan-500 transition-colors" placeholder="Your message"></textarea>
                            </div>
                            <button type="submit" class="w-full py-3 px-6 rounded-lg bg-gradient-to-r from-blue-500 to-cyan-500 text-white font-medium hover:opacity-90 transition-opacity">
                                Send Message
                            </button>
                        </form>
                    </div>
                </div>

                <!-- Contact Info -->
                <div class="space-y-8" data-aos="fade-left">
                    <!-- Location -->
                    <div class="relative group">
                        <div class="absolute inset-0 bg-gradient-to-r from-cyan-500 to-blue-500 rounded-2xl blur-lg opacity-30"></div>
                        <div class="relative bg-white/5 backdrop-blur-xl border border-white/10 p-6 rounded-2xl">
                            <div class="flex items-center">
                                <div class="p-3 rounded-full bg-blue-500/10 text-blue-400">
                                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                    </svg>
                                </div>
                                <div class="ml-4">
                                    <h3 class="text-white font-medium">Location</h3>
                                    <p class="text-white/70">Satara, Maharashtra, India</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Email -->
                    <div class="relative group">
                        <div class="absolute inset-0 bg-gradient-to-r from-blue-500 to-cyan-500 rounded-2xl blur-lg opacity-30"></div>
                        <div class="relative bg-white/5 backdrop-blur-xl border border-white/10 p-6 rounded-2xl">
                            <div class="flex items-center">
                                <div class="p-3 rounded-full bg-cyan-500/10 text-cyan-400">
                                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                                    </svg>
                                </div>
                                <div class="ml-4">
                                    <h3 class="text-white font-medium">Email</h3>
                                    <p class="text-white/70">datacenter@ycis.ac.in</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Phone -->
                    <div class="relative group">
                        <div class="absolute inset-0 bg-gradient-to-r from-cyan-500 to-blue-500 rounded-2xl blur-lg opacity-30"></div>
                        <div class="relative bg-white/5 backdrop-blur-xl border border-white/10 p-6 rounded-2xl">
                            <div class="flex items-center">
                                <div class="p-3 rounded-full bg-blue-500/10 text-blue-400">
                                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                                    </svg>
                                </div>
                                <div class="ml-4">
                                    <h3 class="text-white font-medium">Phone</h3>
                                    <p class="text-white/70">+91 8668428513</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Initialize AOS -->
    <script>
        AOS.init({
            duration: 800,
            once: true
        });
    </script>

    <%- include('partials/footer') %>

    <!-- Move this section right after the hero section and before the contact section -->
    <% if (typeof success !== 'undefined' && success) { %>
    <section class="relative py-4">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="relative">
                <div class="absolute inset-0 bg-gradient-to-r from-green-500 to-emerald-500 rounded-lg blur-lg opacity-30"></div>
                <div class="relative bg-white/5 backdrop-blur-xl border border-white/10 p-6 rounded-lg">
                    <div class="flex items-center">
                        <svg class="w-6 h-6 text-green-400 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                        </svg>
                        <p class="text-white font-medium">Thank you for contacting us! We'll get back to you soon.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <% } %>

    <!-- Rest of your contact form remains the same -->
    <!-- Add this right before the closing body tag -->
    <script>
        // Check for success parameter in URL
        const urlParams = new URLSearchParams(window.location.search);
        if (urlParams.get('success') === 'true') {
            Sweetalert2.fire({
                title: 'Thank You!',
                text: 'Your message has been sent successfully. We will get back to you soon.',
                icon: 'success',
                background: '#1e293b',
                color: '#fff',
                confirmButtonColor: '#3b82f6',
                confirmButtonText: 'OK'
            });
            // Clean up the URL
            window.history.replaceState({}, document.title, window.location.pathname);
        }
    </script>
</body>
</html>